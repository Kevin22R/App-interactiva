<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@color/white"
    android:layout_margin="12dp"
    android:elevation="6dp"
    android:backgroundTint="#FFFFFF"
    android:clipToPadding="false">

    <TextView
        android:id="@+id/tvNombreDocente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre del docente"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="#222222"
        android:layout_marginBottom="4dp" />

    <TextView
        android:id="@+id/tvEmailDocente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="correo@ejemplo.com"
        android:textSize="16sp"
        android:textColor="#666666"
        android:layout_marginBottom="16dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end">

        <Button
            android:id="@+id/btnEditarDocente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Editar"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:paddingHorizontal="16dp"
            android:paddingVertical="8dp"
            android:layout_marginEnd="8dp"
            android:backgroundTint="#4CAF50"
            android:backgroundTintMode="@color/black" />

        <Button
            android:id="@+id/btnEliminarDocente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Eliminar"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:paddingHorizontal="16dp"
            android:paddingVertical="8dp"
            android:backgroundTint="#F44336"
            android:backgroundTintMode="@color/black" />
    </LinearLayout>
</LinearLayout>
