<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.AgregarDocenteFragment"
    android:padding="16dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="👨‍🏫 Agregar Docente"
                android:textSize="24sp"
                android:layout_marginTop="80dp"
                android:textStyle="bold"
                android:textColor="#1E88E5"
                android:layout_marginBottom="32dp" />

            <EditText
                android:id="@+id/etNombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nombre completo"
                android:inputType="textPersonName"
                android:padding="12dp"
                android:textSize="16sp"
                android:backgroundTint="#BDBDBD"
                android:layout_marginBottom="16dp" />

            <EditText
                android:id="@+id/etCodigo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Código"
                android:inputType="number"
                android:padding="12dp"
                android:textSize="16sp"
                android:backgroundTint="#BDBDBD"
                android:layout_marginBottom="16dp" />

            <EditText
                android:id="@+id/etIdentificacion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Identificación"
                android:inputType="number"
                android:padding="12dp"
                android:textSize="16sp"
                android:backgroundTint="#BDBDBD"
                android:layout_marginBottom="16dp" />

            <EditText
                android:id="@+id/etCorreo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Correo electrónico"
                android:inputType="textEmailAddress"
                android:padding="12dp"
                android:textSize="16sp"
                android:backgroundTint="#BDBDBD"
                android:layout_marginBottom="16dp" />

            <EditText
                android:id="@+id/etContrasena"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Contraseña"
                android:inputType="textPassword"
                android:padding="12dp"
                android:textSize="16sp"
                android:backgroundTint="#BDBDBD"
                android:layout_marginBottom="32dp" />

            <Button
                android:id="@+id/btnGuardarDocente"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="💾 Guardar Docente"
                android:backgroundTint="#8E24AA"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:padding="14dp"
                android:elevation="6dp" />
        </LinearLayout>
    </ScrollView>
</FrameLayout>