<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuPrincipalFragment"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Menú Principal"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginBottom="24dp" />

        <Button
            android:id="@+id/btnMostrarDocentes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mostrar Docentes"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/btnMostrarCategorias"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mostrar Categorías"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/btnAgregarCategoria"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Agregar Categoría"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/btnAgregarDocente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Agregar Docente" />
    </LinearLayout>
</FrameLayout>
